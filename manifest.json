{
  "description": "Use ⌘+⇧+o for toggling fullscreen on any website.",
  "manifest_version": 2,
  "name": "Fullscreen",
  "version": "0.3",
  "permissions": ["activeTab"],
  "homepage_url": "https://github.com/th0rgall/fullscreen",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "512": "icon.png"
  },
  "browser_action": {
    "default_title": "Fullscreen this page"
  }
}
